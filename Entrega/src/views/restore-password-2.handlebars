<div class="container" style="max-width: 600px">
  <h2>Recuperar Contraseña</h2>
  <form action="/api/user/reset-password" method="POST">
    <div class="form-group">
      <label for="password">Introduce tu nueva contraseña</label>
      <input
        type="text"
        class="form-control"
        id="password"
        name="password"
        placeholder="Nueva Contraseña"
        required
      />
    </div>
    <div class="form-group">
      <label for="verifpassword">Introduce tu nueva contraseña</label>
      <input
        type="text"
        class="form-control"
        id="verifpassword"
        name="verifpassword"
        placeholder="Repetir Contraseña"
        required
      />
    </div>
    <input type="hidden" name="token" value="{{token}}">
    
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Restablecer Password</button>
    </div>
  </form>
</div>