<div class="container" style="max-width: 600px">
  <h2>Login</h2>
  <form action="/api/user/login" method="POST">
    <div class="form-group">
      <label for="username">Usuario</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        placeholder="Ingrese su nombre"
        required
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="text"
        class="form-control"
        id="password"
        name="password"
        placeholder="Ingrese su apellido"
        required
      />
    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </form>
  <a href="/api/user/login-github">
    <button class="btn btn-secondary">
      Login with GitHub
    </button>
  </a>
  <br />
  <br />
  <a href="/api/views/register">Registrarse</a>
  <span>-</span>
  <a href="/api/views/restore-password">Recuperar Contrase√±a</a>
</div>